{% set filename_fpm = "/etc/php/" ~ version ~ "/fpm/conf.d/20-xdebug.ini"  %}
{% set filename_cli = "/etc/php/" ~ version ~ "/cli/conf.d/20-xdebug.ini"  %}

COPY ./config/php/xdebug.ini /etc/php/{{ version }}/fpm/conf.d/20-xdebug.ini
COPY ./config/php/xdebug.ini /etc/php/{{ version }}/cli/conf.d/20-xdebug.ini

RUN sed -i 's/__PHP__FOLDER__ID/{{ folder_id }}/g' {{ filename_fpm }} \
    && sed -i 's/__PHP__FOLDER__ID/{{ folder_id }}/g' {{ filename_cli }}

